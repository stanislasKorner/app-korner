{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Korner Hub",
  "version": "0.1.0",
  "identifier": "com.korner.kornerhub",

  "build": {
    "frontendDist": "../src",
    "devUrl": null
  },

  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Korner Hub",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "url": "https://hub.hotels-korner.com/login/",
        "devtools": true
      }
    ]
  },

  "plugins": {
    "notification": null,
    "deep-link": {
      "schemes": ["kornerhub"]
    },
    "cli": {
      "description": "Korner Hub Desktop CLI",
      "args": [
        {
          "name": "ping",
          "description": "Ping test",
          "takesValue": false
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "signingIdentity": "Developer ID Application: Stanislas Wargny",
      "hardenedRuntime": true
    }
  }
}